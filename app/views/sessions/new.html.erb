<% provide(:title, "Log in") %>
<h1><%= t ".login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <%= f.label :email, t("sessions.new.input_email") %>
      <%= f.email_field :email, class: "form-control", placeholder: t(".input_email")%>
      <%= f.label :password, t("sessions.new.input_password") %>
      <%= link_to t(".forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control", placeholder: t(".input_password")%>
      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".remember_me" %></span>
      <% end %>
      <%= f.submit t(".login"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t ".new_user" %> <%= link_to t(".sign_up"), signup_path %></p>
  </div>

  <div id="user_nav">
    <% if current_user %>
      Signed in as <strong><%= current_user.name %></strong>!
      <%= link_to "Sign out", session_path(current_user), method: :delete %>
    <% else %>
      <%= link_to "Sign in with Facebook", "/auth/facebook" %>
    <% end %>
  </div>
  <button scope="public_profile,email" onclick="checkLoginState()">Login Facebook</button>
</div>
