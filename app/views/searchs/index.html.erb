<div class="container">
  <ul>
    <% if @search_films %>
      <% @search_films.each do |film| %>
        <div class="row">
          <li class="col-md-3">
            <%= image_tag film.image %>
          </li>
          <li class="col-md-9">
            <%= link_to film.name, film_path(film) %></br>
            <%= film.describe %>
          </li>
        </div>
      <% end %>
    <% end %>

    <% if @search_categories %>
      <% @search_categories.each do |category| %>
        <div class="row">
          <li class="col-md-3">
            <%= image_tag category.film.image %>
          </li>
          <li class="col-md-9">
            <%= link_to category.film.name, film.path(film) %></br>
            <%= category.film.describe %>
          </li>
        </div>
      <% end %>
    <% end %>

    <% if @search_posts %>
      <% @search_posts.each do |post| %>
        <%= link_to post.title, post_review_path(post) %>
        <%= raw post.content.truncate(250, separator: " ") %>
      <% end %>
    <% end %>
  </ul>
</div>
