<div class="modal-header modal-header-login">
  <button type="button" class="close" data-dismiss="modal">&times;
  </button>
  <h2><span class="glyphicon glyphicon-lock"></span>
    <%= t "sessions.new.login" %></h2>
</div>
<div class="modal-body modal-body-login">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <i class="fa fa-envelope" aria-hidden="true"></i>
      <%= f.label :email, t("sessions.new.input_email") %>
      <%= f.email_field :email, class: "form-control",
        placeholder: t("users.form.input_email")%>
    </div>
    <div class="form-group">
      <span class="glyphicon glyphicon-eye-open"></span>
      <%= f.label :password, t("sessions.new.input_password") %>
      <%= f.password_field :password, class: "form-control",
        placeholder: t("users.form.input_password")%>
    </div>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span><%= t "sessions.new.remember_me" %></span>
    <% end %>
    <%= button_tag type: :submit, class: "btn btn-success btn-block", id: "btn-login-modal" do %>
      <span class="glyphicon glyphicon-off"></span>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= button_tag type: :submit, class: "btn btn-lg
      btn-primary btn-block login_via_face" do %>
      <i class="fa fa-facebook-square" aria-hidden="true">
        &nbsp&nbspLogin via facebook</i>
    <% end %>
  </div>
</div>
<div class="modal-footer modal-footer-login">
  <p><%= link_to t("sessions.new.forgot_password"),
    new_password_reset_path %></p>
</div>
