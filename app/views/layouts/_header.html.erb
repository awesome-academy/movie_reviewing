<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to t(".review_movie"), root_path, class: "navbar-brand" %>
    </div>
    <form class="navbar-form navbar-left fix-form-position">
      <div class="form-group">
        <input type="text" class="form-control search-input" placeholder="<%= t ".search" %>">
      </div>
      <button type="submit" class="btn btn-default"> 
        <i class="glyphicon glyphicon-search"></i>
      </button>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user.nil? %>
        <li>
          <%= link_to signup_path do %>
            <span class="glyphicon glyphicon-user"></span> <%= t(".sign_up") %>
          <% end %>
        </li>
        <li>
          <%= link_to login_path do %>
            <span class="glyphicon glyphicon-log-in"></span> 
            <%= t(".login") %>
          <% end %>
        </li>
      <% else %>
        <li id= "user_profile" class="dropdown">
          <div class="dropdown-toggle" data-toggle="dropdown">
            <%= avatar_for current_user, size: 40 %>
            <div class= "user_name">
              <%= current_user.name %>
              <span class="caret"></span>
            </div>
          </div>
          <ul class="dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <span class="glyphicon glyphicon-user"></span>
                <%= t(".profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to logout_path, method: :delete do %>
              <span class="glyphicon glyphicon-log-out"></span> 
              <%= t(".logout") %>
              <% end %>
            </li>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</nav>
