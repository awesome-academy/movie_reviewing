<%= form_for [:admin, @film] do |f| %>
  <div class="row">
    <div class="col-md-4">
      <%= f.label :name, t("admin.films.edit.name") %>
      <%= f.text_field :name, class: "form-control", placeholder: t("admin.films.index.name")%> </br>
      <%= f.label :play_time, t("admin.films.edit.play_time") %>
      <%= f.number_field :play_time, class: "form-control", placeholder: t("admin.films.index.play_time") %>  </br>
      <%= f.label :link_trailer %>
      <%= f.text_field :link_trailer, class: "form-control",placeholder: t("admin.films.index.trailer") %> </br>
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span> </br>
      <%= f.label :imdb_rate, t("admin.films.index.imdb_rate") %>
      <%= f.number_field :imdb_rate, step: "any", class: "form-control", placeholder: t("admin.films.edit.imdb_rate") %> </br>
      <%= f.label :describe , t("admin.films.edit.describe")%>
      <%= f.text_area :describe, class: "form-control",placeholder: t("admin.films.index.describe") %> </br>
    </div>
    <div class="col-md-4">
      <%= f.fields_for :categories do |builder| %>
        <%= f.label :content, t(".categories") %><br/>
        <%= render "category_fields", f: builder %>
      <% end %>
      <%= link_to_add_fields f, :categories %>
    </div>
    <div class="col-md-4">
      <%= f.fields_for :watching_times do |builder| %>
        <%= render "watching_time_fields", f: builder %>
      <% end %>
      <%= link_to_add_fields f, :watching_times %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <%= f.submit t("admin.films.index.submit"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
